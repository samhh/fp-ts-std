{
    "name": "fp-ts-std",
    "description": "The missing pseudo-standard library for fp-ts.",
    "version": "0.1.0",
    "license": "AGPL-3.0-only",
    "author": "Sam A. Horvath-Hunt <hello@samhh.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/samhh/fp-ts-std"
    },
    "homepage": "https://github.com/samhh/fp-ts-std",
    "bugs": "https://github.com/samhh/fp-ts-std/issues",
    "keywords": [
        "functional-programming",
        "typescript",
        "fp-ts"
    ],
    "files": [
        "lib/"
    ],
    "sideEffects": false,
    "scripts": {
        "dev": "tsc -p ./tsconfig.build.json -w",
        "build": "tsc -p ./tsconfig.build.json",
        "typecheck": "tsc --noEmit",
        "typecheck-dev": "tsc -w --noEmit",
        "lint": "eslint ./src/ --ext ts",
        "test": "jest",
        "clean": "rm -rf lib",
        "prepack": "yarn run build",
        "postpack": "yarn run clean"
    },
    "devDependencies": {
        "@types/eslint": "^7.0.0",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "eslint": "^7.0.0",
        "eslint-plugin-functional": "^3.0.2",
        "fast-check": "^2.5.0",
        "fp-ts": "^2.0.0",
        "jest": "^26.6.0",
        "newtype-ts": "^0.3.0",
        "ts-jest": "^26.4.1",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "peerDependencies": {
        "fp-ts": "^2.0.0",
        "newtype-ts": "^0.3.0"
    }
}
